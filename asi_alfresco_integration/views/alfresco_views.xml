<odoo>
    <!-- Vista principal del explorador - Carpetas con navegaci√≥n -->
    <record id="view_alfresco_folder_explorer_tree" model="ir.ui.view">
        <field name="name">alfresco.folder.explorer.tree</field>
        <field name="model">alfresco.folder</field>
        <field name="arch" type="xml">
            <tree string="Explorador de Alfresco" create="false" edit="false" delete="false">
                <field name="name" string="üìÅ Nombre" />
                <field name="subfolder_count" string="Subcarpetas" />
                <field name="file_count" string="Archivos PDF" />
                <field name="last_sync" string="√öltima Sync" />

                <!-- Botones de navegaci√≥n -->
                <button name="action_view_content"
                    type="object"
                    string="Abrir Carpeta"
                    class="btn-primary"
                    icon="fa-folder-open"
                    attrs="{'invisible': [('subfolder_count', '=', 0)]}" />

                <button name="action_view_files"
                    type="object"
                    string="Ver PDFs"
                    class="btn-info"
                    icon="fa-file-pdf-o"
                    attrs="{'invisible': [('file_count', '=', 0)]}" />

                <button name="action_sync_folder"
                    type="object"
                    string="Sincronizar"
                    class="btn-success"
                    icon="fa-refresh" />
                <button name="action_delete_from_alfresco"
                    type="object"
                    string="üóëÔ∏è Eliminar de Alfresco"
                    class="btn-danger"
                    icon="fa-trash"
                    attrs="{'invisible': ['|', ('subfolder_count', '>', 0), ('file_count', '>', 0)]}"
                    confirm="¬øEst√° seguro de que desea eliminar esta carpeta de Alfresco? Esta acci√≥n no se puede deshacer." />
            </tree>
        </field>
    </record>

    <!-- Vista de √°rbol para archivos PDF (PRINCIPAL) -->
    <record id="view_alfresco_file_tree" model="ir.ui.view">
        <field name="name">alfresco.file.tree</field>
        <field name="model">alfresco.file</field>
        <field name="arch" type="xml">
            <tree string="Archivos PDF" create="false" edit="false" multi_edit="1">
                <field name="name" string="üìÑ Nombre" />
                <field name="folder_id" />
                <field name="file_size_human" />
                <field name="modified_at" />
                <!--<button
                name="action_preview_file"
                    type="object"
                    string="Preview"
                    class="btn-primary"
                    icon="fa-eye" />-->
                <button name="action_download_file"
                    type="object"
                    string="Descargar"
                    class="btn-secondary"
                    icon="fa-download" />
                <!-- BOT√ìN DE FIRMA HABILITADO 
                <button name="action_open_firma_wizard"
                    type="object"
                    string="üñäÔ∏è Firmar"
                    class="btn-warning"
                    icon="fa-pen" />-->
                <button name="action_delete_from_alfresco"
                    type="object"
                    string="üóëÔ∏è Eliminar de Alfresco"
                    class="btn-danger"
                    icon="fa-trash"
                    confirm="¬øEst√° seguro de que desea eliminar este archivo de Alfresco? Esta acci√≥n no se puede deshacer." />
            </tree>
        </field>
    </record>

    <!-- Vista kanban para archivos PDF (SECUNDARIA) -->
    <record id="view_alfresco_file_kanban" model="ir.ui.view">
        <field name="name">alfresco.file.kanban</field>
        <field name="model">alfresco.file</field>
        <field name="arch" type="xml">
            <kanban string="Archivos PDF" create="false" edit="false">
                <field name="id" />
                <field name="name" />
                <field name="file_size_human" />
                <field name="modified_at" />
                <field name="folder_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click"
                            style="width: 280px; margin: 10px;">
                            <div class="o_kanban_image text-center" style="padding: 20px;">
                                <i class="fa fa-file-pdf-o fa-4x text-danger" />
                            </div>
                            <div class="oe_kanban_details" style="padding: 15px;">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"
                                            style="font-size: 14px;">
                                            <field name="name" />
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body" style="margin: 10px 0;">
                                    <div class="text-muted" style="margin-bottom: 5px;">
                                        <i class="fa fa-hdd-o" />
                                        <field name="file_size_human" />
                                    </div>
                                    <div class="text-muted" t-if="record.modified_at.raw_value">
                                        <i class="fa fa-calendar" />
                                        <field name="modified_at" />
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="btn-group" role="group">
                                        <!--<button
                                        name="action_preview_file"
                                            type="object"
                                            class="btn btn-primary btn-sm">
                                            <i class="fa fa-eye" /> Preview </button>-->
                                        <button name="action_download_file"
                                            type="object"
                                            class="btn btn-secondary btn-sm">
                                            <i class="fa fa-download" /> Descargar </button>
                                        <!-- BOT√ìN DE FIRMA EN KANBAN HABILITADO 
                                        <button name="action_open_firma_wizard"
                                            type="object"
                                            class="btn btn-warning btn-sm">
                                            <i class="fa fa-pen" /> Firmar </button>-->
                                        <button name="action_delete_from_alfresco"
                                            type="object"
                                            class="btn btn-danger btn-sm"
                                            confirm="¬øEst√° seguro de que desea eliminar este archivo de Alfresco? Esta acci√≥n no se puede deshacer.">
                                            <i class="fa fa-trash" /> Eliminar </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de formulario para carpetas -->
    <record id="view_alfresco_folder_form" model="ir.ui.view">
        <field name="name">alfresco.folder.form</field>
        <field name="model">alfresco.folder</field>
        <field name="arch" type="xml">
            <form string="Carpeta Alfresco" create="false" edit="false">
                <header>
                    <button name="action_view_content"
                        type="object"
                        string="Ver Subcarpetas"
                        class="oe_highlight"
                        icon="fa-folder-open"
                        attrs="{'invisible': [('subfolder_count', '=', 0)]}" />
                    <button name="action_view_files"
                        type="object"
                        string="Ver Archivos PDF"
                        class="btn-info"
                        icon="fa-file-pdf-o"
                        attrs="{'invisible': [('file_count', '=', 0)]}" />
                    <button name="action_sync_folder"
                        type="object"
                        string="Sincronizar"
                        class="btn-success"
                        icon="fa-refresh" />
                    <button name="action_delete_from_alfresco"
                        type="object"
                        string="üóëÔ∏è Eliminar de Alfresco"
                        class="btn-danger"
                        icon="fa-trash"
                        attrs="{'invisible': ['|', ('subfolder_count', '>', 0), ('file_count', '>', 0)]}"
                        confirm="¬øEst√° seguro de que desea eliminar esta carpeta de Alfresco? Esta acci√≥n no se puede deshacer." />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_files" type="object" class="oe_stat_button"
                            icon="fa-file-pdf-o">
                            <field name="file_count" widget="statinfo" string="Archivos PDF" />
                        </button>
                        <button name="action_view_content" type="object" class="oe_stat_button"
                            icon="fa-folder">
                            <field name="subfolder_count" widget="statinfo" string="Subcarpetas" />
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="complete_path" />
                            <field name="node_id" />
                        </group>
                        <group>
                            <field name="parent_id" />
                            <field name="last_sync" />
                            <field name="external_modified" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de formulario para archivos -->
    <record id="view_alfresco_file_form" model="ir.ui.view">
        <field name="name">alfresco.file.form</field>
        <field name="model">alfresco.file</field>
        <field name="arch" type="xml">
            <form string="Archivo PDF" create="false" edit="false">
                <header>
                    <!--<button
                    name="action_preview_file"
                        type="object"
                        string="Cargar Preview"
                        class="oe_highlight"
                        icon="fa-eye" />-->
                    <button name="action_download_file"
                        type="object"
                        string="Descargar"
                        class="btn-secondary"
                        icon="fa-download" />
                    <!-- BOT√ìN DE FIRMA EN FORM HABILITADO 
                    <button name="action_open_firma_wizard"
                        type="object"
                        string="üñäÔ∏è Firmar Documento"
                        class="btn-warning"
                        icon="fa-pen" />-->
                    <button name="action_delete_from_alfresco"
                        type="object"
                        string="üóëÔ∏è Eliminar de Alfresco"
                        class="btn-danger"
                        icon="fa-trash"
                        confirm="¬øEst√° seguro de que desea eliminar este archivo de Alfresco? Esta acci√≥n no se puede deshacer." />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="folder_id" />
                            <field name="file_size_human" />
                            <field name="modified_at" />
                        </group>
                        <group>
                            <field name="alfresco_node_id" />
                            <field name="mime_type" />
                            <field name="content_url" widget="url" />
                            <field name="preview_url" widget="url" />
                        </group>
                    </group>

                    <!-- Preview del PDF integrado 
                    <div class="row" attrs="{'invisible': [('pdf_content', '=', False)]}">
                        <div class="col-12">
                            <h3>üìÑ Preview del PDF</h3>
                            <field name="pdf_content"
                                widget="pdf_preview"
                                filename="pdf_filename"
                                options="{'height': '800px', 'width': '100%'}" />
                        </div>
                    </div>

                    <div class="alert alert-info text-center"
                        attrs="{'invisible': [('pdf_content', '!=', False)]}">
                        <i class="fa fa-info-circle fa-2x mb-3" />
                        <h4>Preview no cargado</h4>
                        <p>Haz clic en "Cargar Preview" para ver el contenido del PDF aqu√≠ mismo.</p>
                    </div>-->
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista heredada para reportes -->
    <record id="view_alfresco_report_tree" model="ir.ui.view">
        <field name="name">alfresco.report.tree</field>
        <field name="model">ir.actions.report</field>
        <field name="inherit_id" ref="base.act_report_xml_view_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='model']" position="after">
                <field name="alfresco_archive" />
                <field name="folder_id" />
                <field name="metadata_field_ids" widget="many2many_tags" />
                <field name="record_domain" />
                <field name="last_sync_date" />
            </xpath>
        </field>
    </record>

    <!-- Acci√≥n mejorada del explorador con bot√≥n de sincronizaci√≥n -->
    <record id="action_alfresco_explorer" model="ir.actions.act_window">
        <field name="name">üóÇÔ∏è Explorador de Alfresco</field>
        <field name="res_model">alfresco.folder</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_alfresco_folder_explorer_tree" />
        <field name="domain">[('parent_id', '=', False)]</field>
        <field name="context">{
            'search_default_group_by_parent': 1,
            }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¬°Explora el contenido de Alfresco!
            </p>
            <p> Aqu√≠ puedes navegar por las carpetas sincronizadas desde Alfresco.<br /> ‚Ä¢ <strong>Abrir
                Carpeta</strong>: Navegar a las subcarpetas<br /> ‚Ä¢ <strong>Ver PDFs</strong>: Ver
                archivos PDF de la carpeta<br /> ‚Ä¢ <strong>Sincronizar</strong>: Actualizar
                contenido desde Alfresco<br /> ‚Ä¢ <strong>üîÑ Sincronizar Todo</strong>: Actualizar
                todas las carpetas </p>
        </field>
    </record>

    <!-- CAMBIO PRINCIPAL: Tree primero, luego Kanban -->
    <record id="action_alfresco_files" model="ir.actions.act_window">
        <field name="name">üìÑ Todos los Archivos PDF</field>
        <field name="res_model">alfresco.file</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¬°No hay archivos PDF sincronizados!
            </p>
            <p> Los archivos aparecer√°n aqu√≠ despu√©s de sincronizar las carpetas desde Alfresco.<br />
                ‚Ä¢ <strong>Preview</strong>: Ver contenido del PDF<br /> ‚Ä¢ <strong>Descargar</strong>:
                Descargar archivo original<br /> ‚Ä¢ <strong>üñäÔ∏è Firmar</strong>: Firmar digitalmente
                el documento<br /> ‚Ä¢ <strong>Eliminar</strong>: Eliminar archivo de Odoo y Alfresco </p>
        </field>
    </record>

    <record id="action_alfresco_report_config" model="ir.actions.act_window">
        <field name="name">Configuraciones de Reportes</field>
        <field name="res_model">ir.actions.report</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_alfresco_report_tree" />
    </record>

    <!-- Acci√≥n de servidor para sincronizaci√≥n global - CORREGIDA LA INDENTACI√ìN -->
    <record id="action_server_sync_all_alfresco" model="ir.actions.server">
        <field name="name">üîÑ Sincronizar Todo desde Alfresco</field>
        <field name="model_id" ref="model_alfresco_folder" />
        <field name="binding_model_id" ref="model_alfresco_folder" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = env['alfresco.folder'].action_sync_all_folders()</field>
    </record>

    <!-- Men√∫s -->
    <menuitem id="menu_alfresco_root" name="Alfresco" />

    <menuitem id="menu_alfresco_explorer"
        name="üóÇÔ∏è Explorador"
        parent="menu_alfresco_root"
        action="action_alfresco_explorer"
        sequence="1" />

    <menuitem id="menu_alfresco_files"
        name="üìÑ Todos los PDFs"
        parent="menu_alfresco_root"
        action="action_alfresco_files"
        sequence="2" />

    <menuitem id="menu_alfresco_config" name="Configuraciones" parent="menu_alfresco_root"
        sequence="10" />

    <menuitem id="menu_alfresco_report_config"
        name="Reportes"
        parent="menu_alfresco_config"
        action="action_alfresco_report_config" />
</odoo>